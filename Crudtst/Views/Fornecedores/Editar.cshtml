@model Fornecedores
@{
    ViewData["Title"] = "Editar Fornecedores";
}

<div class="text-center">
    <h1 class="display-4">Editar fornecedor</h1>
</div>


<form asp-controller="Fornecedores" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" maxlength="100" class="form-control" placeholder="Digite o nome do fornecedor">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Cnpj">CNPJ</label>
        <input type="text" asp-for="Cnpj" maxlength="14" pattern="[0-9]{14,14}" class="form-control" placeholder="Digite o CNPJ do fornecedor">
        @Html.ValidationMessageFor(x => x.Cnpj)
    </div>

    <br />

    <div class="form-group">
        <select class="form-select" asp-for="Especialidade">
        <option value="Comércio">Comércio</option>
        <option value="Serviço">Serviço</option>
        <option value="Indústria">Indústria</option>
        </select>
        @Html.ValidationMessageFor(x => x.Especialidade)
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Fornecedores" asp-action="Index" role="button">Voltar</a>

</form>
