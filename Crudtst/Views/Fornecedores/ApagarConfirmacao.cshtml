@model Fornecedores
@{
    ViewData["Title"] = "Confirmação apagar fornecedor?";
}

<div class="text-center">
    <h3>Deseja apagar o fornecedor?(@Model.Nome)</h3>
</div>

<div class="text-center">
    <a class="btn btn-danger d-grid gap-2 btn btn-success" role="button" asp-controller="Fornecedores" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
    <a class="btn btn-primary d-grid gap-2 btn btn-primary" role="button" asp-controller="Fornecedores" asp-action="Index">Cancelar exclusão</a>
</div>